<p id="notice"><%= notice %></p>

<% user_is_admin = user_signed_in? && current_user.role == "admin" %>

<h1>Médias</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
	  <% if user_is_admin %>
		<th colspan="3">Actions</th>
	  <% else %>
		<th colspan="1">Actions</th>
	  <% end %>
    </tr>
  </thead>

  <tbody>
    <% @media.each do |medium| %>
      <tr scope="row">
        <td><%= medium.name %></td>
		<td><%= link_to 'Afficher', medium %></td>
		<% if user_is_admin %>
			<td><%= link_to 'Modifier', edit_medium_path(medium) %></td>
			<td><%= link_to 'Supprimer', medium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_is_admin %>
	<%= link_to 'Nouveau média', new_medium_path %>
<% end %>
